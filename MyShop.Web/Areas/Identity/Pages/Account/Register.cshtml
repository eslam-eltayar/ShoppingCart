@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .img-div {
        background-size: cover;
        background-position: center;
        height: 100%;
    }

    .login-img {
        width: 100%;
        height: auto;
    }

    .form-floating input, .form-floating label {
        padding: 1rem;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }
</style>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row">
            <div class="col-md-6 col-lg-5 mx-auto">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="text-center mb-4">Create a New Account</h2>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating">
                        <input asp-for="Input.Name" class="form-control" autocomplete="name" placeholder="Name" />
                        <label asp-for="Input.Name">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.Address" class="form-control" autocomplete="address" placeholder="City-Street" />
                        <label asp-for="Input.Address">Address</label>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.City" class="form-control" autocomplete="city" placeholder="City" />
                        <label asp-for="Input.City">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" type="password" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" type="password" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    @if (User.IsInRole(SD.AdminRole))
                    {
                        <div class="form-check">
                            <input type="radio" value="@SD.AdminRole" id="adminRole" name="RoleRadio" class="form-check-input" />
                            <label class="form-check-label" for="adminRole">@SD.AdminRole</label>
                        </div>

                        <div class="form-check">
                            <input type="radio" value="@SD.CustomerRole" id="customerRole" name="RoleRadio" class="form-check-input" />
                            <label class="form-check-label" for="customerRole">@SD.CustomerRole</label>
                        </div>

                        <div class="form-check">
                            <input type="radio" value="@SD.EditorRole" id="editorRole" name="RoleRadio" class="form-check-input" />
                            <label class="form-check-label" for="editorRole">@SD.EditorRole</label>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 btn-lg mt-4">Create User</button>
                    }
                    else
                    {
                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 btn-lg mt-4">Register</button>
                    }
                </form>
            </div>
            <div class="col-md-6 d-none d-md-block">
                <div class="img-div">
                    <img class="login-img" src="~/img/login@4x.png" alt="Register" />
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}