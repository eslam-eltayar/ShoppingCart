@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .img-div {
        background-size: cover;
        background-position: center;
        height: 100%;
    }

    .login-img {
        width: 100%;
        height: auto;
    }

    .form-floating input, .form-floating label {
        padding: 1rem;
    }

    .form-floating {
        margin-bottom: 1.5rem; /* Increased margin for form fields */
    }

    .form-container {
        max-width: 500px; /* Adjusted width for larger form */
        margin: 0 auto; /* Centered horizontally */
    }

    .btn-lg {
        padding: 1rem 1.5rem; /* Adjusted button size */
    }

    .checkbox label {
        margin-bottom: 1rem;
    }
</style>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row">
            <div class="col-md-8 col-lg-6 form-container">
                <form id="account" method="post">
                    <h2 class="text-center mb-4">Log in to Your Account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" type="password" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg">Log in</button>

                    <div class="mt-3">
                        <p class="text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p class="text-center">
                            Don't have an account? <a id="register-link" asp-page="./Register">Register Now!</a>
                        </p>
                    </div>
                </form>
            </div>
            <div class="col-md-4 d-none d-md-block">
                <div class="img-div">
                    <img class="login-img" src="~/img/login@4x.png" alt="Login" />
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}