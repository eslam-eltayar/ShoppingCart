@model ShoppingCartViewModel
@using MyShop.Web.ViewComponents
@using MyShop.Web
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
</head>
<body class="bg-light">
    <main class="page py-5">
        <section class="shopping-cart">
            <div class="container">
                <div class="block-heading text-center mb-5">
                    <h2 class="text-uppercase font-weight-bold">Shopping Cart</h2>
                </div>
        
                <div class="row">
                    <div class="col-md-12 col-lg-8 mb-4">
                        <div class="items">
                            @foreach (var item in Model.ShoppingCarts)
                            {
                                <div class="card mb-3 shadow-sm">
                                    <div class="row no-gutters">
                                        <div class="col-md-4">
                                            <img src="~/@item.Product.Img" class="card-img" alt="@item.Product.Description">
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="card-title">@item.Product.Name</h5>
                                                <p class="card-text">Description: @item.Product.Description</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="quantity d-flex align-items-center">
                                                        <label for="quantity" class="mr-2 mb-0">Quantity:</label>
                                                        <div class="btn-group" role="group">
                                                            <a class="btn btn-outline-primary btn-sm" asp-action="Plus" asp-route-cartId="@item.Id">+</a>
                                                            <span class="mx-2">@item.Count</span>
                                                            <a class="btn btn-outline-primary btn-sm" asp-action="Minus" asp-route-cartId="@item.Id">-</a>
                                                        </div>
                                                    </div>
                                                    <div class="price text-success">
                                                        <h5 class="mb-0">$@item.Product.Price</h5>
                                                    </div>
                                                    <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-outline-danger btn-sm">Remove</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <div class="summary bg-white p-4 shadow-sm rounded">
                            <h3 class="text-uppercase font-weight-bold">Summary</h3>
                            <hr>
                            <div class="summary-item d-flex justify-content-between">
                                <span class="text">Total</span>
                                <span class="price">$@Model.TotalPrice</span>
                            </div>
                            <a href="\Customer\Cart\Summary" class="btn btn-primary btn-lg btn-block mt-4">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
