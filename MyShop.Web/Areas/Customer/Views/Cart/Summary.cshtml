@model ShoppingCartViewModel
@using Microsoft.Extensions.Options
@using MyShop.Utilities
@inject IOptions<StripeData> Stripe


<!doctype html>
<html>
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Snippet - BBBootstrap</title>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' rel='stylesheet'>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <link href="~/css/summary.css" rel="stylesheet" />
</head>
<body className='snippet-body'>

    <div class="wrapper">
        <div class="h5 large">Billing Address</div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1">
                    <div class="mobile h5">Billing Address</div>
                    <div id="details" class="bg-white rounded pb-5">
                        <div class="form-group">
                            <label>Name</label>
                            <div class="d-flex jusify-content-start align-items-center rounded p-2">
                                <input asp-for="OrderHeader.Name" type="text">
                                <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>City</label>
                                    <div class="d-flex jusify-content-start align-items-center rounded p-2">
                                        <input asp-for="OrderHeader.City" type="text">
                                        <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <div class="d-flex jusify-content-start align-items-center rounded p-2">
                                        <input asp-for="OrderHeader.Phone" type="text">
                                        <span asp-validation-for="OrderHeader.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    <div class="d-flex jusify-content-start align-items-center rounded p-2">
                                        <input type="text" asp-for="OrderHeader.Address" />
                                        <span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1 pt-lg-0 pt-3">
                    <div id="cart" class="bg-white rounded">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="h6">Cart Summary</div>
                            <div class="h6">
                                <a href="/Customer/Cart/Index">Edit</a>
                            </div>
                        </div>
                        @foreach (var item in Model.ShoppingCarts)
                        {
                            <div class="d-flex jusitfy-content-between align-items-center pt-3 pb-2 border-bottom">
                                <div class="item pr-2">
                                    <img src="/@item.Product.Img"
                                         alt="" width="80" height="80">
                                    <div class="number">@item.Count</div>
                                </div>
                                <div class="d-flex flex-column px-3">
                                    <b class="h5">@item.Product.Name</b>
                                </div>
                                <div class="ml-auto">
                                    <b class="h5">$@item.Product.Price</b>
                                </div>
                            </div>
                        }



                        <div class="d-flex align-items-center py-2">
                            <div class="display-5">Total</div>
                            <div class="ml-auto d-flex">
                                <div class="text-primary text-uppercase px-3">usd</div>
                                <div class="font-weight-bold">$@Model.OrderHeader.TotalPrice</div>
                            </div>
                        </div>
                    </div>



                    <div class="row pt-lg-3 pt-2 buttons mb-sm-0 mb-2">
                        <div class="col-md-6">
                            <div class="btn text-uppercase">
                                <a href="/Customer/Home">back to shopping</a>
                            </div>
                        </div>
                        <div class="col-md-6 pt-md-0 pt-1" style="padding-inline: 0px;">
                            <button type="submit" class="btn btn-primary">Place Order</button>
                        </div>
                    </div>
                    <div class="text-muted pt-3" id="mobile">
                        <span class="fas fa-lock"></span>
                        Your information is save
                    </div>
                </div>
            </div>
        </form>
        <div class="text-muted">
            <span class="fas fa-lock"></span>
            Your information is save
        </div>
    </div>
    <script type='text/javascript' src='https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript'>#</script>
    <script type='text/javascript'>
        var myLink = document.querySelector('a[href="#"]');
        myLink.addEventListener('click', function (e) {
            e.preventDefault();
        });</script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}